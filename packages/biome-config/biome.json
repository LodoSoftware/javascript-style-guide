{
  "$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useSemanticElements": "warn"
      },
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "useNodejsImportProtocol": "off",
        "useBlockStatements": "error"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 100,
    "ignore": ["package.json"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "arrowParentheses": "asNeeded"
    }
  },
  "overrides": [
    {
      "include": ["package.json"],
      "formatter": {
        "attributePosition": "multiline"
      }
    }
  ],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
