{
  "extends": ["config:base"],
  "suppressNotifications": ["prIgnoreNotification"],
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "stabilityDays": 3,
  "includeForks": true,
  "schedule": ["every weekend"],
  "packageRules": [
    {
      "groupName": "lerna-lite",
      "matchPackagePatterns": "@lerna-lite/*"
    }
  ],
  "ignorePaths": ["packages/tslint-config"],
  "npmrc": ""
}
